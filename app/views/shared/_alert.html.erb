<% if alert.present? %>
  <div class="container alert alert-danger alert-dismissible fade show alert-float " role="alert">
    <strong><%= alert %>!</strong>
    <button type="button" class="btn-close close" data-bs-dismiss="alert" aria-hidden="true" aria-label="Close"></button>
  </div>
<% end %>

<% if notice.present? %>
  <div class="container alert alert-success alert-dismissible fade show alert-float " role="alert">
    <strong><%= notice %>!</strong>
    <button type="button" class="btn-close close" data-bs-dismiss="alert" aria-hidden="true" aria-label="Close"></button>
  </div>
<% end %>

<script>
    $(function() {
        $('.alert-float').slideDown().delay(5000).slideUp();
    });
    $('.alert .close').click(function(){
        $('.alert').slideUp();
    });
</script>