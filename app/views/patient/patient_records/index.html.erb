<div class="card">
  <div class="card-body">
    <h5 class="card-title">Patient Records</h5>

    <%= link_to "New Patient Record", new_patient_patient_record_path, class: "btn btn-primary float-end" %>

    <!-- Default Table -->
    <table class="table">
      <thead>
      <tr>
        <th scope="col">Disease</th>
        <th scope="col">Height</th>
        <th scope="col">Weight</th>
        <th scope="col">Date of birth</th>
        <th scope="col">Blood group</th>
        <th scope="col" colspan="3">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @patient_records.each do |patient_record| %>
        <tr>
          <td  scope="row"><%= patient_record.disease %></td>
          <td><%= patient_record.height %></td>
          <td><%= patient_record.weight %></td>
          <td><%= patient_record.date_of_birth %></td>
          <td><%= patient_record.blood_group %></td>
          <td>
            <%= link_to "show", patient_patient_record_path(patient_record), class: "btn btn-sm btn-info" %>
            <%= link_to "Edit", edit_patient_patient_record_path(patient_record), class: "btn btn-sm btn-primary" %>
            <a data-turbo-method="delete" class="btn btn-sm btn-outline-danger" href="/patient/patient_records/<%= patient_record.id %>">Delete</a>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>