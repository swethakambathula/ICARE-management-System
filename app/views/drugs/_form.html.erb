<%= simple_form_for @treatment_drug, url: @treatment_drug.new_record? ? patient_record_treatment_drugs_path : patient_record_treatment_drug_path(@treatment_drug), html: { "data-turbo": false, class: "row g-3" } do |f| %>

  <div class="col-12">
    <label class="form-label">Drug</label>
    <%= f.input :drug_id, as: :select, collection: Drug.all, input_html: { class: "form-control" }, include_blank: "Select drug", label: false %>
  </div>

  <div class="col-12">
    <label class="form-label">Description</label>
    <%= f.input :description, input_html: { class: "form-control" }, label: false %>
  </div>

  <div class="col-12">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>